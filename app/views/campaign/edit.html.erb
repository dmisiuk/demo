<h1 >Edit campaign details</h1>
<% form_tag(:action => "update", :id => @campaign) do %>

	<p><label for="campaign_name">Name</label>:
	<%= text_field 'campaign', 'name' %></p>
	
	<p><label for='campaign_status'>Status</label>:
	<%= text_field 'campaign', 'status' %></p>
	
	<p><label for='campaign_type'>Type</label>:
	<%= text_field 'campaign', 'type' %></p>
	
	<%= submit_tag "Save" %>
  
<% end -%>

<%= link_to "Back", :action => 'list' %>